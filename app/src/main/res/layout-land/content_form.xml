<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constrain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Background"
    android:isScrollContainer="true" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/addButton"
                android:layout_width="34dp"
                android:layout_height="42dp"
                app:layout_constraintBottom_toBottomOf="@+id/desplegable"
                app:layout_constraintStart_toEndOf="@+id/desplegable"
                app:layout_constraintTop_toTopOf="@+id/desplegable"
                app:srcCompat="@android:drawable/ic_input_add" />

            <ImageView
                android:id="@+id/calendarIco"
                android:layout_width="41dp"
                android:layout_height="47dp"
                app:layout_constraintBottom_toBottomOf="@+id/FechaTextInputLayout"
                app:layout_constraintEnd_toStartOf="@+id/FechaTextInputLayout"
                app:layout_constraintTop_toTopOf="@+id/FechaTextInputLayout"
                app:srcCompat="@drawable/calendario" />

            <ImageView
                android:id="@+id/categoriaIco"
                android:layout_width="50dp"
                android:layout_height="55dp"
                app:layout_constraintBottom_toBottomOf="@+id/desplegable"
                app:layout_constraintEnd_toStartOf="@+id/desplegable"
                app:layout_constraintTop_toTopOf="@+id/desplegable"
                app:srcCompat="@drawable/ic_boxeo"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/movilInputLayout"
                android:layout_width="315dp"
                android:layout_height="73dp"
                android:layout_marginTop="250dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/movil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Móvil" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nameInputLayout"
                android:layout_width="172dp"
                android:layout_height="74dp"
                android:layout_marginStart="178dp"
                android:layout_marginBottom="430dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:hint="Nombre" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/Image"
                android:layout_width="149dp"
                android:layout_height="157dp"
                android:layout_marginEnd="210dp"
                android:layout_marginBottom="480dp"
                android:background="@drawable/foto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:srcCompat="@tools:sample/avatars" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/apellido2InputLayout"
                android:layout_width="239dp"
                android:layout_height="68dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="170dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/apellido2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="2º Apellido" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/apellido1InputLayout"
                android:layout_width="237dp"
                android:layout_height="71dp"
                android:layout_marginBottom="240dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/apellido1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1º Apellido" />
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/desplegable"
                style="@style/Spinner"
                android:layout_width="212dp"
                android:layout_height="37dp"
                android:layout_marginTop="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/FechaTextInputLayout"
                android:layout_width="313dp"
                android:layout_height="67dp"
                android:layout_marginTop="400dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fecha"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:hint="dd/mm/aaaa" />
            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/profesional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="530dp"
                android:text="Profesional"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/eliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="700dp"
                android:layout_marginEnd="200dp"
                android:text="Eliminar"
                app:icon="@android:drawable/ic_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="700dp"
                android:text="Guardar"
                app:icon="@android:drawable/ic_menu_save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginBottom="580dp"
                android:text="Limpiaar"
                app:icon="@android:drawable/btn_dialog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/phoneIco"
                android:layout_width="30dp"
                android:layout_height="44dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/movilInputLayout"
                app:layout_constraintEnd_toStartOf="@+id/movilInputLayout"
                app:layout_constraintTop_toTopOf="@+id/movilInputLayout"
                app:srcCompat="@drawable/telefono" />

            <ImageView
                android:id="@+id/NombreIco"
                android:layout_width="34dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/nameInputLayout"
                app:layout_constraintEnd_toStartOf="@+id/nameInputLayout"
                app:layout_constraintTop_toTopOf="@+id/nameInputLayout"
                app:srcCompat="@drawable/usuario" />

            <ImageView
                android:id="@+id/apellido1Ico"
                android:layout_width="65dp"
                android:layout_height="58dp"
                app:layout_constraintBottom_toBottomOf="@+id/apellido1InputLayout"
                app:layout_constraintEnd_toStartOf="@+id/apellido1InputLayout"
                app:layout_constraintTop_toTopOf="@+id/apellido1InputLayout"
                app:srcCompat="@drawable/usuario__1_" />

            <ImageView
                android:id="@+id/apellido2Ico"
                android:layout_width="65dp"
                android:layout_height="58dp"
                app:layout_constraintBottom_toBottomOf="@+id/apellido2InputLayout"
                app:layout_constraintEnd_toStartOf="@+id/apellido2InputLayout"
                app:layout_constraintTop_toTopOf="@+id/apellido2InputLayout"
                app:srcCompat="@drawable/usuario__1_" />

            <ImageView
                android:id="@+id/profesionalIco"
                android:layout_width="44dp"
                android:layout_height="62dp"
                app:layout_constraintBottom_toBottomOf="@+id/profesional"
                app:layout_constraintEnd_toStartOf="@+id/profesional"
                app:layout_constraintTop_toTopOf="@+id/profesional"
                app:srcCompat="@drawable/empresario_profesional" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>