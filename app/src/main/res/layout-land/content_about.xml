<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A1E3EC"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/contacto"
                android:layout_width="84dp"
                android:layout_height="27dp"
                android:layout_marginTop="350dp"
                android:layout_marginEnd="230dp"
                android:text="Contacto:"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textIsSelectable="false"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/correo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="ruizserranoalberto60@gmail.com"
                android:textColor="#757171"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/contacto"
                app:layout_constraintStart_toEndOf="@+id/contacto"
                app:layout_constraintTop_toTopOf="@+id/contacto"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Alberto Ruiz Serrano"
                android:textColor="#757171"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/DesarrolladaPor"
                app:layout_constraintStart_toEndOf="@+id/DesarrolladaPor"
                app:layout_constraintTop_toTopOf="@+id/DesarrolladaPor"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/DesarrolladaPor"
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:layout_marginTop="270dp"
                android:layout_marginEnd="170dp"
                android:text="Desarrollada por:"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textIsSelectable="false"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textViewRingBox"
                android:layout_width="124dp"
                android:layout_height="45dp"
                android:layout_marginBottom="60dp"
                android:text="RingBOX"
                android:textColor="#039BE5"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logoAbout"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/logoAbout"
                android:layout_width="309dp"
                android:layout_height="177dp"
                android:layout_marginBottom="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_boxeo"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>